@model EMS.Models.Language
@{
    ViewBag.Title = "EditLanguage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<p>
    @Html.ActionLink("View Language", "ViewLanguage", "Language", new { @class = "btn btn-primary" })
</p>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.LanguageCode, new { @class = "control-label col-md-4" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.LanguageCode, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LanguageCode)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LanguageName, new { @class = "control-label col-md-4" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.LanguageName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LanguageName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-4 col-md-10">
                @Html.ActionLink("Reset", "SaveLanguage", "Language", new { @class = "btn btn-warning" }) ||
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
