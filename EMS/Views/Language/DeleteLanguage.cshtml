@model EMS.Models.Language
@{
    ViewBag.Title = "DeleteLanguage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<section class="content" style="background-color: #ffffff; width: 700px;">

    <div align="center">
        <h3>Are you sure you want to delete this language ?</h3>
        <hr />
        <div>
            @Html.DisplayFor(model => model.LanguageCode)
        </div>
        <div>
            @Html.DisplayFor(model => model.LanguageName)
        </div>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> ||
                @Html.ActionLink("Back", "ViewLanguage", "Language", new { @class = "btn btn-primary" })
            </div>
        }
    </div>
</section>