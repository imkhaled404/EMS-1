@model IEnumerable<EMS.Models.Language>

@{
    ViewBag.Title = "ViewLanguage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr/>
<p>
    @Html.ActionLink("Add Language", "SaveLanguage", "Language", new {@class = "btn btn-primary"})
</p>
<br/>
<table id="myTable" class="table table-hover table-responsive table-striped table-condensed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LanguageCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LanguageName)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LanguageCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LanguageName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditLanguage", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteLanguage", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function() {
            $('#myTable').DataTable();
        })
    </script>
}