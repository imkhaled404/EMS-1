@model EMS.Models.Skill

@{
    ViewBag.Title = "EditSkill";
}

<hr />
<p>
    @Html.ActionLink("View Skill", "ViewSkill", "Skill", new { @class = "btn btn-primary" })
</p>
<br />



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.SkillName, new {@class = "control-label col-md-4"})
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.SkillName, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.SkillName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new {@class = "control-label col-md-4"})
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.Description, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-4 col-md-10">
                @Html.ActionLink("Reset", "SaveSkill", "Skill", null, new {@class = "btn btn-warning"}) ||
                <input type="submit" value="Save" class="btn btn-success"/>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
