@model IEnumerable<EMS.Models.EmployeeDocument>

@{
    ViewBag.Title = "ViewEmployeeDocuments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="content" style="background-color: #ffffff;">
    <p>
        <a class="btn btn-sm btn-primary" href="@Url.Action("SaveEmployeeDocuments", "EmployeeDocument")">Add New <i class="fa fa-plus"></i></a>
    </p>
    <br />
    <table id="myTable" class="table table-hover table-responsive table-striped table-condensed">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DocumentType.TypeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employee.EmployeeRegNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DocumentTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DocumentAddedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExpiredDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Details)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DocumentType.TypeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employee.EmployeeRegNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DocumentTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DocumentAddedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpiredDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Details)
                    </td>
                    <td>
                        <img src="@Url.Content("/image/")@item.FilePath" width="100" height="100" />
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditEmployeeDocuments", new { id = item.Id }) |
                        @if (item.FilePath != null)
                        {
                            @Html.ActionLink("Save", "DownloadDocument", new { id = item.Id })
                        } |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}