@model EMS.Models.Department
@{
    ViewBag.Title = "EditDepartment";
}

<h2></h2>
<hr />

<p>
    @Html.ActionLink("View Department", "ViewAllDepartment", "Department", new { @class = "btn btn-primary" })
</p>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.DepartmentCode, new { @class = "control-label col-md-4" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.DepartmentCode, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DepartmentCode)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DepartmentName, new { @class = "control-label col-md-4" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.DepartmentName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DepartmentName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-4 col-md-10">
                @Html.ActionLink("Reset", "SaveDepartment", "Department", null, new { @class = "btn btn-warning" }) ||
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}




