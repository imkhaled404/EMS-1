@model EMS.Models.Department
@{
    ViewBag.Title = "DeleteDepartment";
}

<h2></h2>
<hr />
<div align="center">
    <h3>Are you sure you want to delete this designation ?</h3>
    <hr />
    <div>
        @Html.DisplayFor(model => model.DepartmentCode)
    </div>
    <div>
        @Html.DisplayFor(model => model.DepartmentName)
    </div>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> ||
            @Html.ActionLink("Back", "ViewAllDepartment", "Department", new { @class = "btn btn-primary" })
        </div>
    }
</div>


