@model EMS.Models.User.AppUserLogin


@{
    ViewBag.Title = "Login";
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 2 | Registration Page</title>

    @Styles.Render("~/Content/css")

    <!-- iCheck -->
    <link href="~/Content/iCheck/square/blue.css" rel="stylesheet" />

    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="@Url.Action("Login","AppUser")"><b>Employee</b>MS</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg" style="color: #1e90ff;">
                Sign in to start your session
            </p>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    if (ViewBag.Message != "")
                    {
                        <div class="text-danger">*@ViewBag.Message</div>
                    }
                    @Html.ValidationSummary(true)
                    <div class="form-group has-feedback">
                        @Html.EditorFor(model => model.UserName, new {htmlAttributes = new {@class = "form-control", @name = "username", @placeholder = "Username"}})
                        @Html.ValidationMessageFor(model => model.UserName, "", new {@class = "text-danger "})
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        @Html.EditorFor(model => model.Password, new {htmlAttributes = new {@class = "form-control", @name = "password", @type = "password", @placeholder = "Password"}})
                        @Html.ValidationMessageFor(model => model.Password, "", new {@class = "text-danger"})
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <div class="row">
                        <div class="col-xs-8">
                            <div class="checkbox icheck">
                                <label id="RememberMe" name="RememberMe">
                                    <input type="checkbox" id="RememberMe" name="RememberMe"> Remember Me
                                </label>
                            </div>
                        </div>

                        <div class="col-xs-4">
                            <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                        </div>

                    </div>
                }

            <a href="@Url.Action("Registration","AppUser")" class="text-center">Register a new membership</a>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Content/iCheck/icheck.min.js"></script>

    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>
</html>
