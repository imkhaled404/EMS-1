@model EMS.Models.Certification
@{
    ViewBag.Title = "DeleteCertification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<section class="content" style="background-color: #ffffff; width: 700px;">

    <div align="center">
        <h3>Are you sure you want to delete this certificate ?</h3>
        <hr />
        <div>
            @Html.DisplayFor(model => model.CertificationName)
        </div>
        <div>
            @Html.DisplayFor(model => model.Description)
        </div>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> ||
                @Html.ActionLink("Back", "ViewCertificate", "Certification", new { @class = "btn btn-primary" })
            </div>
        }
    </div>

</section>