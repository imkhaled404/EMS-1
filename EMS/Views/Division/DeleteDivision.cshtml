@model EMS.Models.Division

@{
    ViewBag.Title = "DeleteDivision";
}

<br />
<section class="content" style="background-color: #ffffff; width: 700px;">

    <div align="center">
        <h3>Are you sure you want to delete this division ?</h3>
        <hr />
        <div>
            @Html.DisplayFor(model => model.Country.CountryName)
        </div>
        <div>
            @Html.DisplayFor(model => model.DivisionCode)
        </div>
        <div>
            @Html.DisplayFor(model => model.DivisionName)
        </div>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> ||
                @Html.ActionLink("Back", "Index", "Division", new { @class = "btn btn-primary" })
            </div>
        }
    </div>
</section>
