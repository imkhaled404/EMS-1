@model IEnumerable<EMS.Models.EmployeeCertification>

@{
    ViewBag.Title = "ViewEmployeeCertification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content" style="background-color: #ffffff;">
    <p>
        <a class="btn btn-sm btn-primary" href="@Url.Action("SaveEmployeeCertification", "EmployeeCertification")">Add New <i class="fa fa-plus"></i></a>
    </p>
    <br />
    <table id="myTable" class="table table-hover table-responsive table-striped table-condensed">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CertificationId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InstituteName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FromDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ToDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CertificationId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InstituteName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FromDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ToDate)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditEmployeeCertification", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "DeleteEmployeeCertification", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}