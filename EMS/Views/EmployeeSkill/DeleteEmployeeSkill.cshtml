@model EMS.Models.EmployeeSkill

@{
    ViewBag.Title = "DeleteEmployeeSkill";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<section class="content" style=" width: 700px;">
    <div class="panel-group">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4>Delete Employee Skill</h4>
            </div>
            <div align="center">
                <h3>Are you sure you want to delete this?</h3>
                <br />
                <dl>
                    <dt>
                        Employee
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Employee.EmployeeRegNo)
                    </dd>

                    <dt>
                        Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Skill.SkillName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Details)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Details)
                    </dd>


                    <br/>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        @Html.ActionLink("Back", "ViewEmployeeSkill", "EmployeeSkill", new { @class = "btn btn-primary" })
                    </div>
                }
                <br />
                </dl>
            </div>
        </div>
    </div>
</section>