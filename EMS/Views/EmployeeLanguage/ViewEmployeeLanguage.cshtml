@model IEnumerable<EMS.Models.EmployeeLanguage>

@{
    ViewBag.Title = "ViewEmployeeLanguage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content" style="background-color: #ffffff;">
    <p>
        <a class="btn btn-sm btn-primary" href="@Url.Action("SaveEmployeeLanguage", "EmployeeLanguage")">Add New <i class="fa fa-plus"></i></a>
    </p>
    <br/>
    <table id="myTable" class="table table-hover table-responsive table-striped table-condensed">
        <thead>
        <tr>
            <th>
                Employee
            </th>
            <th>
                Language
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reading)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speaking)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Writing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Understanding)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.EmployeeRegNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Language.LanguageName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reading)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Speaking)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Writing)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Understanding)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditEmployeeLanguage", new {id = item.Id}) |
                    @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                    @Html.ActionLink("Delete", "DeleteEmployeeLanguage", new {id = item.Id})
                </td>
            </tr>
        }
        </tbody>
    </table>
</section>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}