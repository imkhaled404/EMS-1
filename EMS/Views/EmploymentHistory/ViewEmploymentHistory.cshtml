@model IEnumerable<EMS.Models.EmploymentHistory>

@{
    ViewBag.Title = "ViewEmploymentHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<section class="content" style="background-color: #ffffff;">
    <p>
        <a class="btn btn-sm btn-primary" href="@Url.Action("SaveEmploymentHistory","EmploymentHistory")">Add New <i class="fa fa-plus"></i></a>
    </p>
    <br />
    <table id="myTable" class="table table-hover table-responsive table-striped table-condensed">
        <thead>
        <tr>
            <th>
                Employee Reg.No.
            </th>
            <th>
               Department
            </th>
            <th>
               Designation
            </th>
            <th>
                Company
            </th>
            <th>
                Location
            </th>
            <th>
               From
            </th>
            <th>
                Is Current?
            </th>
            <th>
               To
            </th>
            <th>
                Responsibilities
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employee.EmployeeRegNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department.DepartmentCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Designation.DesignationCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyLocation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmploymentFromDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsCurrentEmployee)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmploymentToDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Responsibilities)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditEmploymentHistory", new {id = item.Id}) |
                        @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                        @Html.ActionLink("Delete", "DeleteEmploymentHistory", new {id = item.Id})
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}