@model EMS.Models.Exam
@{
    ViewBag.Title = "SaveExam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<section class="content" style="background-color: #ffffff; width: 700px;">

    <p>
        @Html.ActionLink("View Exam", "ViewExam", "Exam", new { @class = "btn btn-primary" })
    </p>
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.ExamName, new { @class = "control-label col-md-4" })
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.ExamName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ExamName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.EducationId, new { @class = "control-label col-md-4" })
                <div class="col-md-4">
                    @Html.DropDownListFor(model => model.EducationId, ViewBag.EducationId as SelectList, "Select Education--", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.EducationId)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-4 col-md-10">
                    @Html.ActionLink("Reset", "SaveExam", "Exam", null, new { @class = "btn btn-warning" }) ||
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </div>


        </div>
    }
</section>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
