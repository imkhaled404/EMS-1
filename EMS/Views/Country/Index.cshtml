@model IEnumerable<EMS.Models.Country>

@{
    ViewBag.Title = "Index";
}

<br />
<section class="content" style="background-color: #ffffff;">

    <p>
        @Html.ActionLink("Add Country", "SaveCountry", "Country", new { @class = "btn btn-primary" })
    </p>
    <br />

    <table id="myTable" class="table table-hover table-responsive table-striped table-condensed">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CountryCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CountryName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CountryCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CountryName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditCountry", new { id = item.Id }) ||
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        })
    </script>
}