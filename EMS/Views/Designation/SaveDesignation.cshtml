@model EMS.Models.Designation
@{
    ViewBag.Title = "SaveDesignation";
}
<br />

<section class="content" style="width: 700px;">
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <div class="panel-group">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        Save Designation
                    </div>
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(model => model.DesignationCode, new { @class = "control-label col-md-4" })
                        <div class="col-md-4">
                            @Html.TextBoxFor(model => model.DesignationCode, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DesignationCode)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DesignationName, new { @class = "control-label col-md-4" })
                        <div class="col-md-4">
                            @Html.TextBoxFor(model => model.DesignationName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DesignationName)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-10">
                            <input type="submit" value="Save" class="btn btn-success" /> ||
                            @Html.ActionLink("Reset", "SaveDesignation", "Designation", null, new { @class = "btn btn-warning" }) ||
                            @Html.ActionLink("View", "ViewDesignation", "Designation", new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}


