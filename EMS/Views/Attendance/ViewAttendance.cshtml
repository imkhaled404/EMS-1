@model IEnumerable<EMS.Models.Attendance>

@{
    ViewBag.Title = "ViewAttendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content" style="background-color: #ffffff;">
    <p>
        <a class="btn btn-sm btn-primary" href="@Url.Action("SaveAttendance", "Attendance")">Add New <i class="fa fa-plus"></i></a>
    </p>
    <br />
    <table id="myTable" class="table table-hover table-responsive table-striped table-condensed">
        <thead>
            <tr>
                <th>
                    Employee
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OutTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Note)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employee.EmployeeRegNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OutTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Note)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditAttendance", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "DeleteAttendance", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}